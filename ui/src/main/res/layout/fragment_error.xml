<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="state"
            type="com.example.domain.states.ErrorState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintStart_toStartOf="@id/button"
            app:layout_constraintEnd_toEndOf="@+id/button"
            android:layout_marginBottom="@dimen/default_layout_margin"
            android:text="@{state.message}"
            style="@style/White.Regular.18"
            tools:text="message" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/error_button_width"
            android:layout_height="@dimen/error_button_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{state.buttonLabel}"
            style="@style/Button.Dialog"
            tools:text="button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>