<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="state"
            type="com.example.domain.states.DetailsState" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/default_image_width"
            android:layout_height="@dimen/default_image_height"
            android:layout_marginBottom="@dimen/details_layout_margin"
            android:layout_marginEnd="@dimen/default_layout_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/name_label"
            style="@style/White.Bold.18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/details_layout_margin"
            android:layout_marginTop="@dimen/details_name_margin_top"
            android:text="@string/details_name_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="name_label" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{state.name}"
            android:layout_margin="@dimen/default_layout_margin"
            app:layout_constraintTop_toTopOf="@+id/name_label"
            app:layout_constraintBottom_toBottomOf="@+id/name_label"
            app:layout_constraintStart_toEndOf="@+id/name_label"
            style="@style/White.Regular.18"
            tools:text="name"/>

        <TextView
            android:id="@+id/height_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_height_label"
            android:layout_marginStart="@dimen/dialog_layout_margin"
            android:layout_marginTop="@dimen/default_layout_margin"
            app:layout_constraintTop_toBottomOf="@+id/name_label"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/White.Bold.18"
            tools:text="heightLabel"/>

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{state.height}"
            android:layout_margin="@dimen/default_layout_margin"
            app:layout_constraintTop_toTopOf="@+id/height_label"
            app:layout_constraintBottom_toBottomOf="@+id/height_label"
            app:layout_constraintStart_toEndOf="@+id/height_label"
            style="@style/White.Regular.18"
            tools:text="height"/>

        <TextView
            android:id="@+id/weight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_weight_label"
            android:layout_marginStart="@dimen/details_layout_margin"
            android:layout_marginTop="@dimen/default_layout_margin"
            app:layout_constraintTop_toBottomOf="@+id/height_label"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/White.Bold.18"
            tools:text="weight_label"/>

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{state.weight}"
            android:layout_margin="@dimen/default_layout_margin"
            app:layout_constraintTop_toTopOf="@+id/weight_label"
            app:layout_constraintBottom_toBottomOf="@+id/weight_label"
            app:layout_constraintStart_toEndOf="@+id/weight_label"
            style="@style/White.Regular.18"
            tools:text="weight"/>

        <TextView
            android:id="@+id/moves_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_moves_label"
            android:layout_marginStart="@dimen/details_layout_margin"
            android:layout_marginTop="@dimen/default_layout_margin"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/weight_label"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/White.Bold.18"
            tools:text="moves_label"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/details_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/moves_label"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/details_recycler_view_item">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>