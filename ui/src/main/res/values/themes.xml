<resources>
    <style name="Theme.Pokedex" parent="@android:style/Theme.NoTitleBar.Fullscreen">

    </style>

    <style name="White">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="White.Bold" parent="White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="White.Regular" parent="White" />
    <style name="White.Regular.18" parent="White.Regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="White.Bold.18" parent="White.Bold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="White.Bold.20" parent="White.Bold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="White.Bold.22" parent="White.Bold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Button">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/shape_red</item>
    </style>

    <style name="Dialog.Fullscreen" parent="Theme.Pokedex">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>